<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">
    
		<field
			formid="email" 
			label="label.input.email.newsletter" 
			mandatory="true" 
            binding="email"
			max-length="50" 
			missing-error="error.message.required.newsletter"
			parse-error="error.message.parse.email.form.newsletter"
			range-error="error.message.50orless.newsletter"
			regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$" 
			value-error="ValueErrorText"
			type="string"/> 

    <field 
			formid="firstname" 
			label="label.input.firstname.newsletter" 
			mandatory="true"
            binding="firstName"
			max-length="50"
			missing-error="error.message.required.newsletter" 
			range-error="error.message.50orless.newsletter" 
			type="string" />

		<field 
			formid="lastname" 
			label="label.input.lastname.newsletter" 
			mandatory="true"
            binding="lastName" 
			max-length="50" 
			missing-error="error.message.required.newsletter"
			range-error="error.message.50orless.newsletter" 
			type="string" />

    <action formid="save" valid-form="true"/>
   
</form>
